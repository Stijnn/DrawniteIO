<UserControl x:Class="DrawniteClient.Views.Controls.ConnectedPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrawniteClient.Views.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Margin="10" Background="#212121">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="txtUsername" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Text="NAME HERE" Foreground="White" FontSize="18" Padding="20, 5" FontFamily="Bahnschrift Light"/>

        <iconPacks:PackIconJamIcons    
            x:Name="icoPlayer"
            Width="32"
            Height="32"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="LightGray"
            Kind="User" Padding="5" />
    </Grid>
</UserControl>
